<!doctype html>
<html>
<head>
    <title>DEMO DAY</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container">
    <header>
      <img>
      <section class="account">
        <a class="button">PROFILE</a>
        <div class="avatar">
          <div class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
            <img src="https://placeimg.com/192/192/people" />
          </div>
        </div>
      </section>
    </header>
    <nav>
      <ul>
        <li>TOP</li>
        <li>NEW</li>
        <li>BROWSE</li>
      </ul>
    </nav>
    <div class="sidebar">
      <a class="button" id="addProposal">
        <span class="material-symbols-outlined">add</span>CREATE</a>
      <section id="filters">
        <select>
          <% for(let i=0; i < category.length; i++) { %>
            <option><%=category[i]%></option>
          <% } %> 
        </select>
      </section>
      <section id="stats"></section>
    </div>
    <div id="proposals">
      <form id="createProposal" class="hidden">
        <fieldset id="proposalInfo">
          <legend>YOUR PROPOSAL
          <label for="propName">Proposal Name</label>
            <input type="text" name="name" id="propName">
          <label for="propCost">Proposal Cost</label>
            <input type="text" name="cost" id="propCost">
          <label for="propBlurb">Proposal Short Description</label>
            <textarea type="text" name="blurb" id="propBlurb"></textarea>
          <label for="propImpact">Proposal Impact</label>
            <textarea type="text" name="impact" id="propImpact"></textarea>
          <label for="propPartners">Who are the stakeholders?</label>
            <textarea type="text" name="partners" id="propPartners"></textarea>
          <label for="propFull">Full Proposal Description</label>
            <textarea type="text" name="description" id="propFull"></legend>

        </fieldset>
        <fieldset id="authorInfo">
          <legend>ABOUT YOU</legend>

        </fieldset>
      </form>
      <% for (let i=0; i < proposals.length; i++){%>
        <section class="proposal" >
          <section class="details"></section>
          <h3><%=proposals[i].proposal%></h3>
          <span><%=proposals[i].cost%></span>
          <span><%=proposals[i].blurb%></span>
          <a class="button">See view proposal</a>
        </section>
        <section class="ranking">
          <span class="material-symbols-outlined">
            arrow_upward </span>
          <span class="material-symbols-outlined">
              arrow_downward</span>
        </section>
      <% } %>
    </div>
    <footer></footer>
  </div>

  <script src="main.js"></script>

</body>
</html>
